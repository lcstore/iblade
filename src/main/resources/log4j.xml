<?xml version="1.0" encoding="UTF-8" ?>   
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">


	<!-- 输出到控制台中 -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss\} %-5p [%c:%L,%t] %m%n" />
			<!-- "%-5p: [%t] [%c{3}.%M(%L)] | %m%n" -->
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMax" value="ERROR" />
			<param name="LevelMin" value="INFO" />
		</filter>
	</appender>

	<appender name="mAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<!-- 设置File参数：日志输出文件名 -->
		<param name="File" value="${log_path}" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss\} %-5p [%c:%L,%t] %m%n" />
		</layout>
	</appender>

	<logger name="com.lezo.mall.blade.monitor" additivity="true">
		<level value="INFO" />
		<appender-ref ref="mAppender"/> 
	</logger>

	<root>
		<priority value="info" />
		<appender-ref ref="console" />
		<!-- <appender-ref ref="mAppender" /> -->
	</root>
</log4j:configuration> 